APP_NAME="Dilo Records"
APP_ENV=production
APP_KEY=base64:CHANGEME_GENERATE_WITH_php_artisan_key:generate
APP_DEBUG=false
APP_URL=https://tu-dominio.com

APP_LOCALE=es
APP_FALLBACK_LOCALE=es
APP_FAKER_LOCALE=es_ES

BCRYPT_ROUNDS=12

# ======================================================
# üéõÔ∏è CONFIGURACI√ìN ESPEC√çFICA PARA cPANEL
# ======================================================

# === DATABASE (cPANEL) ===
# IMPORTANTE: En cPanel siempre es localhost
# Formato: usuario_nombredb y usuario_dbuser
DB_CONNECTION=mysql
DB_HOST=localhost
DB_PORT=3306
DB_DATABASE=usuario_dilorecords
DB_USERNAME=usuario_dilo
DB_PASSWORD=CHANGE_ME_STRONG_PASSWORD

# === LOGGING & MONITORING ===
LOG_CHANNEL=stack
LOG_STACK=single
LOG_LEVEL=info
LOG_DEPRECATIONS_CHANNEL=null

# === SESSION (SIN REDIS EN cPANEL) ===
# cPanel no proporciona Redis en planes est√°ndar
# Usar file driver en lugar de redis
SESSION_DRIVER=file
# Alternativa: SESSION_DRIVER=cookie
SESSION_LIFETIME=120
SESSION_ENCRYPT=true
SESSION_PATH=/
SESSION_DOMAIN=.tu-dominio.com
SESSION_SECURE_COOKIES=true
SESSION_HTTP_ONLY=true
SESSION_SAME_SITE=Lax

# === CACHE (SIN REDIS EN cPANEL) ===
# Usar file driver en lugar de redis
CACHE_STORE=file
CACHE_PREFIX=dilo_prod_

# === QUEUE (DATABASE EN cPANEL) ===
# No hay Supervisor/Redis en cPanel est√°ndar
# Opci√≥n 1: DATABASE (recomendado)
QUEUE_CONNECTION=database

# Opci√≥n 2: SYNC (m√°s lento, solo para testing)
# QUEUE_CONNECTION=sync

# Configuraci√≥n de queue
QUEUE_FAILED_TABLE=failed_jobs

# === REDIS (COMENTAR SI NO DISPONIBLE) ===
# Descomentar solo si tu plan de cPanel incluye Redis
# REDIS_CLIENT=phpredis
# REDIS_HOST=redis-host.com
# REDIS_PASSWORD=null
# REDIS_PORT=6379
# REDIS_DB=0

# === FILESYSTEM ===
# Usar ImageKit para uploads (recomendado)
FILESYSTEM_DISK=imagekit

# Alternativa: Si quieres guardar localmente en cPanel
# FILESYSTEM_DISK=public

# === IMAGEKIT (Recomendado para Assets) ===
IMAGEKIT_PUBLIC_KEY=your_imagekit_public_key
IMAGEKIT_PRIVATE_KEY=your_imagekit_private_key
IMAGEKIT_URL_ENDPOINT=your_imagekit_url_endpoint

# === MAIL ===
# Configurar con tu proveedor de email
MAIL_MAILER=smtp
MAIL_HOST=smtp.tu-proveedor.com
MAIL_PORT=587
MAIL_USERNAME=tu_email@tu-dominio.com
MAIL_PASSWORD=CHANGE_ME
MAIL_ENCRYPTION=tls
MAIL_FROM_ADDRESS="noreply@tu-dominio.com"
MAIL_FROM_NAME="Dilo Records"

# === SECURITY & CORS ===
# Cambiar a tu dominio real
CORS_ALLOWED_ORIGINS=https://tu-dominio.com,https://www.tu-dominio.com

# === SANCTUM (API SECURITY) ===
SANCTUM_STATEFUL_DOMAINS=tu-dominio.com,www.tu-dominio.com
SANCTUM_EXPIRATION=43200

# === MAINTENANCE MODE ===
APP_MAINTENANCE_DRIVER=database

# === BROADCAST ===
# En cPanel sin Redis, usar database o log
BROADCAST_CONNECTION=database
# BROADCAST_CONNECTION=log

# === VITE ===
VITE_APP_NAME="${APP_NAME}"

# ======================================================
# üìù NOTAS IMPORTANTES PARA cPANEL
# ======================================================

# 1. DB_HOST siempre es "localhost" en cPanel
# 2. DB_DATABASE y DB_USERNAME siguen formato "usuario_" de cPanel
#    Esto se ve en cPanel ‚Üí Databases ‚Üí MySQL Databases
# 3. SESSION_DRIVER=file (no usar redis en cPanel est√°ndar)
# 4. CACHE_STORE=file (no usar redis en cPanel est√°ndar)
# 5. QUEUE_CONNECTION=database (usar database, no redis/supervisor)
# 6. Certificado SSL: Usar AutoSSL de cPanel o Let's Encrypt
# 7. Para procesar queue: Configurar cron
#    */1 * * * * cd ~/public_html && php artisan queue:work --once --max-time=60
# 8. Para tareas programadas (schedule): Configurar cron
#    * * * * * cd ~/public_html && php artisan schedule:run

