APP_NAME="Dilo Records"
APP_ENV=production
APP_KEY=base64:CHANGEME_GENERATE_WITH_php_artisan_key:generate
APP_DEBUG=false
APP_URL=https://example.com

APP_LOCALE=es
APP_FALLBACK_LOCALE=es
APP_FAKER_LOCALE=es_ES

BCRYPT_ROUNDS=12

# === DATABASE ===
DB_CONNECTION=mysql
DB_HOST=your-host.com
DB_PORT=3306
DB_DATABASE=dilo_records_prod
DB_USERNAME=dilo_prod_user
DB_PASSWORD=CHANGE_ME_STRONG_PASSWORD

# === LOGGING & MONITORING ===
LOG_CHANNEL=stack
LOG_STACK=single
LOG_LEVEL=info
LOG_DEPRECATIONS_CHANNEL=null

# === SESSION ===
SESSION_DRIVER=database
SESSION_LIFETIME=120
SESSION_ENCRYPT=true
SESSION_PATH=/
SESSION_DOMAIN=.example.com
SESSION_SECURE_COOKIES=true
SESSION_HTTP_ONLY=true
SESSION_SAME_SITE=Lax

# === CACHE ===
CACHE_STORE=redis
# CACHE_STORE=database (alternative if Redis not available)
CACHE_PREFIX=dilo_prod_

# === QUEUE ===
QUEUE_CONNECTION=redis
# QUEUE_CONNECTION=database (alternative if Redis not available)

# === REDIS (Optional) ===
REDIS_CLIENT=phpredis
REDIS_HOST=redis-host.com
REDIS_PASSWORD=CHANGE_ME_REDIS_PASSWORD
REDIS_PORT=6379
REDIS_DB=0

# === FILESYSTEM ===
FILESYSTEM_DISK=imagekit
# Para uploads locales en producci√≥n, usa:
# FILESYSTEM_DISK=s3
# AWS_ACCESS_KEY_ID=
# AWS_SECRET_ACCESS_KEY=
# AWS_DEFAULT_REGION=us-east-1
# AWS_BUCKET=
# AWS_URL=

# === IMAGEKIT ===
IMAGEKIT_PUBLIC_KEY=your_imagekit_public_key
IMAGEKIT_PRIVATE_KEY=your_imagekit_private_key
IMAGEKIT_URL_ENDPOINT=your_imagekit_url_endpoint

# === MAIL ===
MAIL_MAILER=smtp
MAIL_HOST=smtp.mailtrap.io
MAIL_PORT=465
MAIL_USERNAME=your_mail_username
MAIL_PASSWORD=your_mail_password
MAIL_ENCRYPTION=tls
MAIL_FROM_ADDRESS="noreply@dilorecords.com"
MAIL_FROM_NAME="Dilo Records"

# === SECURITY & CORS ===
CORS_ALLOWED_ORIGINS=https://example.com,https://www.example.com

# === SANCTUM (API SECURITY) ===
SANCTUM_STATEFUL_DOMAINS=example.com,www.example.com
SANCTUM_EXPIRATION=43200

# === MAINTENANCE MODE ===
APP_MAINTENANCE_DRIVER=database
# APP_MAINTENANCE_STORE=database

# === BROADCAST ===
BROADCAST_CONNECTION=redis

# === VITE ===
VITE_APP_NAME="${APP_NAME}"

# === OPTIONAL: SENTRY (Error Tracking) ===
# SENTRY_LARAVEL_DSN=https://key@sentry.io/project-id
# SENTRY_ENVIRONMENT=production
# SENTRY_TRACES_SAMPLE_RATE=1.0
# SENTRY_PROFILES_SAMPLE_RATE=1.0
